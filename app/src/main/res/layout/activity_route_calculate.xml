<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/include_toolbar"/>

    <RelativeLayout style="@style/View_V">
        <include layout="@layout/include_map_view"/>
        <ImageView
                android:id="@+id/strategy_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="10dp"
                android:background="@color/black_50"
                android:src="@drawable/icon_route"/>

        <ImageView
                android:id="@+id/map_traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/black_50"
                android:src="@mipmap/map_traffic_hl_white"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white">
        <LinearLayout
                android:id="@+id/llTypeOne"
                style="@style/View_H"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            <TextView
                    android:id="@+id/tvTypeOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>
            <TextView
                    android:id="@+id/tvTimeOne"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvMileOne"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/llTypeTwo"
                style="@style/View_H"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            <TextView
                    android:id="@+id/tvTypeTwo"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvTimeTwo"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvMileTwo"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/llTypeThree"
                style="@style/View_H"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            <TextView
                    android:id="@+id/tvTypeThree"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvTimeThree"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvMileThree"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:id="@+id/tvDescRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:gravity="center"/>
    <Button
            android:id="@+id/btnNavi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="@string/desc_begin_navi"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:background="@drawable/bg_blue_box"/>
</LinearLayout>